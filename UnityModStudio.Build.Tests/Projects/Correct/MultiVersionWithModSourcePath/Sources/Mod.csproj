  <PropertyGroup>
    <TargetFramework>net46</TargetFramework>
    <GameName>Unity2018Test</GameName>
    <GameVersions>1.0;1.1</GameVersions>
    <ModSourcePath>..\</ModSourcePath>
    <OutDir>$(ModSourcePath)$(GameVersion)\Assemblies\</OutDir>
