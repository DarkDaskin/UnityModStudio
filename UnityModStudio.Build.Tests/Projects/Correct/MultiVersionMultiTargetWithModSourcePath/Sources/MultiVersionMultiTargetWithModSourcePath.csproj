<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net46;netstandard2.0</TargetFrameworks>
    <GameName>Unity2018Test</GameName>
    <GameVersions Condition="'$(TargetFramework)' == 'net46'">1.0</GameVersions>
    <GameVersions Condition="'$(TargetFramework)' == 'netstandard2.0'">1.1</GameVersions>
    <ModSourcePath>..\</ModSourcePath>
    <OutDir>$(ModSourcePath)\$(GameVersion)\Assemblies\</OutDir>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="$(ModSourcePath)Defs\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="UnityModStudio.Build" Version="$(BuildPackageVersion)" />
  </ItemGroup>

</Project>